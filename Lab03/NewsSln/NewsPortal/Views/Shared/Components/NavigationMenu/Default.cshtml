@model IEnumerable<string>
    @{
    var active = (string?)ViewBag.SelectedCategory;
    }
    <div class="list-group">
        <a class="list-group-item list-group-item-action @(string.IsNullOrEmpty(active) ? "active" : "")"
           asp-controller="Articles" asp-action="Index">All</a>
        @foreach (var c in Model)
    {
        <a class="list-group-item list-group-item-action @(active == c ? "active" : "")"
           asp-controller="Articles" asp-action="Index" asp-route-category="@c">@c</a>
    }
    </div>
