@model NewsPortal.Models.Article

<div class="card mb-3">
  <div class="card-body">
    <h4 class="card-title mb-1">@Model.Title</h4>
    <div class="text-muted mb-2">
      @Model.Author • @Model.PublishedAt.ToLocalTime():yyyy-MM-dd HH:mm • @Model.Category
    </div>
    <p class="card-text">
      @Model.Body.Substring(0, Math.Min(200, Model.Body.Length))@((Model.Body.Length > 200) ? "..." : "")
    </p>
    <a class="btn btn-sm btn-primary" asp-controller="Articles" asp-action="Details" asp-route-id="@Model.ArticleID">Read more</a>
  </div>
</div>
