@model NewsPortal.Models.Article

<h2 class="mb-2">@Model.Title</h2>
<div class="text-muted mb-3">
    @Model.Author • @Model.PublishedAt.ToLocalTime():yyyy-MM-dd HH:mm • @Model.Category
</div>
@if (!string.IsNullOrWhiteSpace(Model.CoverImageUrl))
{
<img class="img-fluid mb-3" src="@Model.CoverImageUrl" alt="@Model.Title" />
}
<p>@Model.Body</p>
