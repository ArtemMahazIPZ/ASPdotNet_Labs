@model IEnumerable<NewsPortal.Models.Article>
    <h6 class="mb-2">Recently viewed</h6>
    @if (!Model.Any())
{
    <div class="text-muted">No items yet.</div>
}
else
{
    <ul class="list-unstyled">
        @foreach (var a in Model)
    {
        <li class="mb-1">
            <a asp-controller="Articles" asp-action="Details" asp-route-id="@a.ArticleID">
                @a.Title
            </a>
            <small class="text-muted d-block">@a.Category?.Name</small>
        </li>
    }
    </ul>
}
