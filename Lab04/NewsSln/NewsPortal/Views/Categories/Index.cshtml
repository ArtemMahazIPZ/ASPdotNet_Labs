@model IEnumerable<NewsPortal.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Categories</h2>
    <a asp-action="Create" class="btn btn-primary">Create Category</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@category.CategoryId" class="btn btn-sm btn-outline-secondary">Details</a>
                    <a asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-sm btn-outline-primary ms-1">Edit</a>
                    <a asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-sm btn-outline-danger ms-1">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
