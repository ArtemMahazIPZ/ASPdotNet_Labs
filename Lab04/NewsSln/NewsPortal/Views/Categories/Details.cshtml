@model Category
@{
    ViewData["Title"] = "Category Details";
}
<h2>@Model.Name</h2>
<p class="text-muted">@Model.Description</p>
<h5>Articles (@(Model.Articles?.Count ?? 0))</h5>
<ul>
    @foreach (var a in Model.Articles)
    {
        <li><a asp-controller="Articles" asp-action="Details" asp-route-id="@a.Id">@a.Title</a></li>
    }
</ul>
<div class="d-flex gap-2">
    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
</div>