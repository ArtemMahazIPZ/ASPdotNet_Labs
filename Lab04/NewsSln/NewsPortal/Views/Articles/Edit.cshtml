@model NewsPortal.Models.ViewModels.ArticleFormViewModel

@{
    ViewData["Title"] = "Edit Article";
}

<h2 class="mb-3">Edit Article</h2>

<form asp-action="Edit" asp-route-id="@Model.Article.ArticleID" method="post">
    <input type="hidden" asp-for="Article.ArticleID" />
    <partial name="_ArticleFormFields" model="Model" />
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Details" asp-route-id="@Model.Article.ArticleID" class="btn btn-secondary ms-2">Cancel</a>
</form>
