@model NewsPortal.Models.ViewModels.ArticleListViewModel

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">
        Latest News
        @if (!string.IsNullOrEmpty(Model.CurrentCategory))
        {
            <small class="text-muted">(@Model.CurrentCategory)</small>
        }
    </h2>
    <a asp-action="Create" class="btn btn-primary">Create Article</a>
</div>


@foreach (var a in Model.Articles)
{
<partial name="_ArticleSummary" model="a" />
}

@if (Model.PagingInfo.TotalPages > 1)
{
<nav>
    <ul class="pagination">
        @for (int i = 1; i <= Model.PagingInfo.TotalPages; i++)
      {
        <li class="page-item @(i == Model.PagingInfo.CurrentPage ? "active" : "")">
            <a class="page-link"
               asp-controller="Articles"
               asp-action="Index"
               asp-route-page="@i"
               asp-route-category="@Model.CurrentCategory">@i</a>
        </li>
      }
    </ul>
</nav>
}
