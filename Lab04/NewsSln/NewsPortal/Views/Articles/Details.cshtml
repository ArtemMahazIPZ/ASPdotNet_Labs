@model NewsPortal.Models.Article

@{
    ViewData["Title"] = Model.Title;
}

<div class="d-flex justify-content-between align-items-start mb-3">
    <h2 class="mb-0">@Model.Title</h2>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ArticleID" class="btn btn-sm btn-outline-primary">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.ArticleID" class="btn btn-sm btn-outline-danger ms-2">Delete</a>
    </div>
</div>
<div class="text-muted mb-3">
    @Model.Author @Model.PublishedAt.ToLocalTime():yyyy-MM-dd HH:mm @Model.Category?.Name
</div>
@if (!string.IsNullOrWhiteSpace(Model.CoverImageUrl))
{
    <img class="img-fluid mb-3" src="@Model.CoverImageUrl" alt="@Model.Title" />
}
<p>@Model.Body</p>
