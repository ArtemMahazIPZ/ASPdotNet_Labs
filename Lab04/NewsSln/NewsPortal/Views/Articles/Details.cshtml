@model NewsPortal.Models.Article
@{
    ViewData["Title"] = Model.Title;
}

<h1 class="display-5">@Model.Title</h1>

<p class="text-muted mb-3">
    @(string.IsNullOrWhiteSpace(Model.Author) ? "—" : Model.Author)
    • @Model.PublishedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
    • @Model.Category?.Name
</p>

@if (!string.IsNullOrWhiteSpace(Model.CoverImageUrl))
{
    <img class="img-fluid mb-3" src="@Model.CoverImageUrl" alt="@Model.Title" />
}

<article class="mb-4">
    @Html.Raw((Model.Content ?? string.Empty).Replace("\n", "<br/>"))
</article>

<div class="d-flex gap-2">
    <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Back</a>
</div>
